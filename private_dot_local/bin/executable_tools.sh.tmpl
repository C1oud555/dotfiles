#for wsl2, should use mirror mode
hostip=127.0.0.1
port=21882

PROXY_HTTP="http://${hostip}:${port}"

set_proxy() {
  export http_proxy="${PROXY_HTTP}"
  export HTTP_PROXY="${PROXY_HTTP}"

  export https_proxy="${PROXY_HTTP}"
  export HTTPS_PROXY="${PROXY_HTTP}"
}

unset_proxy() {
  unset http_proxy
  unset HTTP_PROXY
  unset https_proxy
  unset HTTPS_PROXY
}

set_clang() {
  export CC=clang
  export CXX=clang++
}
unset_clang() {
  unset CC
  unset CXX
}

set_proxy
